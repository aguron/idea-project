<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/personalbest_bg"
    android:orientation="vertical" >

                

    <Button
        android:id="@+id/PBbackBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/statistics_chart_back" />

                <ListView
                    android:id="@+id/PB_Timed"
                    android:layout_width="284dp"
                    android:layout_height="147dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="96dp"
                    android:clickable="false" >

   				 </ListView>
   				 
                <TextView
       				android:id="@+id/Timed_Workout"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignLeft="@+id/PB_Timed"
        			android:layout_alignParentTop="true"
        			android:layout_marginLeft="24dp"
        			android:layout_marginTop="68dp"
        			android:text="Timed Workout:"
        			android:textAppearance="?android:attr/textAppearanceMedium" />
                
                 <ListView
                     android:id="@+id/PB_AMRAP"
                     android:layout_width="284dp"
                     android:layout_height="147dp"
                     android:layout_above="@+id/PBbackBtn"
                     android:layout_alignLeft="@+id/PB_Timed"
                     android:layout_centerHorizontal="true"
                     android:layout_marginBottom="5dp"
                     android:clickable="false" >

   				</ListView>

    			<TextView
    			    android:id="@+id/AMRAP_Workout"
    			    android:layout_width="150dp"
    			    android:layout_height="wrap_content"
    			    android:layout_above="@+id/PB_AMRAP"
    			    android:layout_alignLeft="@+id/Timed_Workout"
    			    android:layout_marginBottom="5dp"
    			    android:text="AMRAP Workout:"
    			    android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>