<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/amrap_timer"
    android:orientation="vertical" >

      <TableRow
          android:id="@+id/tableRow1"
          android:layout_width="280dp"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="15dp" >

        <Button
            android:id="@+id/amrap_resume"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="2"
            android:background="@drawable/resume" />

        <Button
            android:id="@+id/amrap_stop"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="2"
            android:background="@drawable/done" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tableRow1"
        android:layout_alignLeft="@+id/tableRow1"
        android:layout_marginBottom="50dp" >

        <Button
            android:id="@+id/amrap_start"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:background="@drawable/start" />

        <Button
            android:id="@+id/amrap_pause"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="18dp"
            android:layout_weight="2"
            android:background="@drawable/pause" />

    </TableRow>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableRow2"
        android:layout_alignLeft="@+id/tableRow2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="60dp"
        android:paddingBottom="30dip"
        android:paddingRight="10dip"
        android:paddingTop="30dip"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold"
        android:typeface="normal" />

</RelativeLayout>
